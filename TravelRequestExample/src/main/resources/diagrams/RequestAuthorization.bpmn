<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:activiti="http://activiti.org/bpmn" xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC" xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI" typeLanguage="http://www.w3.org/2001/XMLSchema" expressionLanguage="http://www.w3.org/1999/XPath" targetNamespace="http://www.activiti.org/test">
  <process id="TravelAuthorization" name="Travel authorization" isExecutable="true">
    <startEvent id="startevent1" name="Start"></startEvent>
    <userTask id="travelauth" name="Travel authorization request" activiti:candidateUsers="kermit">
      <extensionElements>
        <activiti:formProperty id="studentName" name="Student Name" type="string" required="true"></activiti:formProperty>
        <activiti:formProperty id="amount" name="Amount" type="long" required="true"></activiti:formProperty>
        <activiti:formProperty id="travelMotivation" name="Travel Motivation" type="string" required="true"></activiti:formProperty>
        <activiti:formProperty id="currency" name="Currency" type="enum" required="true">
          <activiti:value id="EUR" name="€"></activiti:value>
          <activiti:value id="USD" name="$"></activiti:value>
        </activiti:formProperty>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow1" sourceRef="startevent1" targetRef="travelauth"></sequenceFlow>
    <userTask id="travelApproval" name="Authorization approval" activiti:candidateGroups="management">
      <documentation>${studentName} would like to take the amount of ${amount} with the motivation ${travelMotivation}</documentation>
      <extensionElements>
        <activiti:formProperty id="travelApproved" name="Do you approve the request?" type="enum" required="true">
          <activiti:value id="true" name="Approve"></activiti:value>
          <activiti:value id="false" name="Reject"></activiti:value>
        </activiti:formProperty>
        <activiti:formProperty id="motivation" name="Motivation of rejection" type="string"></activiti:formProperty>
      </extensionElements>
    </userTask>
    <endEvent id="endevent1" name="End"></endEvent>
    <exclusiveGateway id="exclusivegateway1" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="fundsNotAvailable" name="Personal funds not available" sourceRef="exclusivegateway1" targetRef="travelApproval">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${personalFundsAvailable == "false"}]]></conditionExpression>
    </sequenceFlow>
    <sequenceFlow id="personalFundsAvailable" name="Personal funds available" sourceRef="exclusivegateway1" targetRef="endevent1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${personalFundsAvailable == "true"}]]></conditionExpression>
    </sequenceFlow>
    <sequenceFlow id="flow5" sourceRef="travelauth" targetRef="scripttask2"></sequenceFlow>
    <sequenceFlow id="flow6" sourceRef="scripttask2" targetRef="exclusivegateway1"></sequenceFlow>
    <sequenceFlow id="nameNotCorrect" name="Name not correct" sourceRef="exclusivegateway1" targetRef="printNameError">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${personalFundsAvailable == "error"}]]></conditionExpression>
    </sequenceFlow>
    <scriptTask id="printNameError" name="Print notice" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>println "Name not correct";</script>
    </scriptTask>
    <endEvent id="endevent2" name="End"></endEvent>
    <sequenceFlow id="flow7" sourceRef="printNameError" targetRef="endevent2"></sequenceFlow>
    <exclusiveGateway id="exclusivegateway2" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow8" sourceRef="travelApproval" targetRef="exclusivegateway2"></sequenceFlow>
    <sequenceFlow id="flow9" name="Amount not approved" sourceRef="exclusivegateway2" targetRef="scripttask1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${travelApproved == false}]]></conditionExpression>
    </sequenceFlow>
    <sequenceFlow id="flow11" name="Travel approved" sourceRef="exclusivegateway2" targetRef="endevent1"></sequenceFlow>
    <scriptTask id="scripttask1" name="Print motivation" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>println("Travel has been rejected because: $motivation")</script>
    </scriptTask>
    <userTask id="insertNewAmount" name="Insert new amount" activiti:candidateUsers="kermit">
      <extensionElements>
        <activiti:formProperty id="amount" name="Amount" type="long" required="true"></activiti:formProperty>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow12" sourceRef="scripttask1" targetRef="insertNewAmount"></sequenceFlow>
    <sequenceFlow id="flow13" sourceRef="insertNewAmount" targetRef="travelApproval"></sequenceFlow>
    <scriptTask id="scripttask2" name="Check personal funds" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>if (studentName.length() &lt; 3) {
	execution.setVariable("personalFundsAvailable", "error");
	return;
}

if (currency == "EUR") {
	if (amount &gt; 1000) {
		execution.setVariable("personalFundsAvailable", "false");
		println studentName + " requires money to finance his travel";
	}
	else {
		execution.setVariable("personalFundsAvailable", "true");
		println studentName + " does not require financing for his travel";
	}
}
if (currency == "USD") {
	euro = amount / 1.2805;
	println "\$" + amount + " = €" + euro;
	amount = euro;
	execution.setVariable("amount", euro);

	if (amount &gt; 1000) {
		execution.setVariable("personalFundsAvailable", "false");
		println studentName + " requires money to finance his travel";
	}
	else {
		execution.setVariable("personalFundsAvailable", "true");
		println studentName + " does not require financing for his travel";
	}
}
</script>
    </scriptTask>
