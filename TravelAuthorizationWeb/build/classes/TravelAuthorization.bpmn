  <process id="TravelAuthorization" name="Travel Authorization" isExecutable="true">
    <startEvent id="startevent1" name="Start"></startEvent>
    <userTask id="request" name="Travel Request" activiti:candidateGroups="students">
      <extensionElements>
        <activiti:formProperty id="studentName" name="Student name" type="string" required="true"></activiti:formProperty>
        <activiti:formProperty id="amount" name="Amount" type="long" required="true"></activiti:formProperty>
        <activiti:formProperty id="travelMotivation" name="Travel motivation" type="string" required="true"></activiti:formProperty>
        <activiti:formProperty id="studentEmail" name="Email" type="string" required="true"></activiti:formProperty>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow1" sourceRef="startevent1" targetRef="request"></sequenceFlow>
    <serviceTask id="servicetask1" name="Check Personal Fund" activiti:class="eu.unitn.CheckFunds"></serviceTask>
    <exclusiveGateway id="exclusivegateway1" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow3" sourceRef="servicetask1" targetRef="exclusivegateway1"></sequenceFlow>
    <sequenceFlow id="flow4" name="Personal funds not available" sourceRef="exclusivegateway1" targetRef="subprocess1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${ !personalFundsAvailable }]]></conditionExpression>
    </sequenceFlow>
    <endEvent id="endevent1" name="End"></endEvent>
    <sequenceFlow id="flow5" name="Personal funds available" sourceRef="exclusivegateway1" targetRef="servicetask2">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${ personalFundsAvailable }]]></conditionExpression>
    </sequenceFlow>
    <serviceTask id="servicetask2" name="Send mail to student" activiti:class="me.ettoredelnegro.SendEmail">
      <extensionElements>
        <activiti:field name="mailText">
          <activiti:expression>Dear ${studentName} ${studentEmail},
your request for ${amount} for traveling has been approved.</activiti:expression>
        </activiti:field>
        <activiti:field name="mailSubject">
          <activiti:string><![CDATA[Travel request approved]]></activiti:string>
        </activiti:field>
        <activiti:field name="mailRecipient">
          <activiti:expression>${studentEmail}</activiti:expression>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <serviceTask id="mailtask1" name="Send mail to student" activiti:type="mail">
      <extensionElements>
        <activiti:field name="to">
          <activiti:string><![CDATA[ete.dne@gmail.com]]></activiti:string>
        </activiti:field>
        <activiti:field name="from">
          <activiti:string><![CDATA[ettore@bpmn.unitn.eu]]></activiti:string>
        </activiti:field>
        <activiti:field name="subject">
          <activiti:expression>Travel request ${ travelApproved ? "approved" : "rejected" }</activiti:expression>
        </activiti:field>
        <activiti:field name="text">
          <activiti:expression>Dear ${studentName} ${studentEmail},
the manager ${ travelApproved ? "approved" : "rejected" } your travel request of EUR ${amount}.
${ travelApproved ? "" : "The motivation is: ".concat(rejectionMotivation) }</activiti:expression>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <sequenceFlow id="flow7" sourceRef="mailtask1" targetRef="endevent1"></sequenceFlow>
    <sequenceFlow id="flow8" sourceRef="servicetask2" targetRef="endevent1"></sequenceFlow>
    <subProcess id="subprocess1" name="Authorization approval">
      <userTask id="authorizationApproval" name="Authorization Approval" activiti:candidateGroups="management">
        <documentation>${studentName} wants ${amount} to travel because ${travelMotivation}</documentation>
        <extensionElements>
          <activiti:formProperty id="travelApproved" name="Travel approved" type="boolean" required="true"></activiti:formProperty>
          <activiti:formProperty id="rejectionMotivation" name="Motivation of rejection" type="string"></activiti:formProperty>
        </extensionElements>
      </userTask>
      <startEvent id="startevent2" name="Start"></startEvent>
      <sequenceFlow id="flow9" sourceRef="startevent2" targetRef="authorizationApproval"></sequenceFlow>
      <endEvent id="terminateendevent1" name="TerminateEndEvent">
        <terminateEventDefinition></terminateEventDefinition>
      </endEvent>
      <sequenceFlow id="flow10" sourceRef="authorizationApproval" targetRef="terminateendevent1"></sequenceFlow>
    </subProcess>
    <sequenceFlow id="flow6" sourceRef="subprocess1" targetRef="mailtask1"></sequenceFlow>
    <boundaryEvent id="boundarytimer1" name="Timer" attachedToRef="subprocess1" cancelActivity="true">
      <timerEventDefinition>
        <timeDuration>PT3M50S</timeDuration>
      </timerEventDefinition>
    </boundaryEvent>
    <sequenceFlow id="flow13" sourceRef="boundarytimer1" targetRef="scripttask1"></sequenceFlow>
    <scriptTask id="scripttask1" name="Approve request" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>execution.setVariable("travelApproved", true)
println "Travel request automatically approved"</script>
    </scriptTask>
    <sequenceFlow id="flow14" sourceRef="scripttask1" targetRef="mailtask1"></sequenceFlow>
    <serviceTask id="mailtask2" name="Send reminder" activiti:type="mail">
      <extensionElements>
        <activiti:field name="to">
          <activiti:string><![CDATA[ete.dne@gmail.com]]></activiti:string>
        </activiti:field>
        <activiti:field name="from">
          <activiti:string><![CDATA[ettore@bpmn.unitn.eu]]></activiti:string>
        </activiti:field>
        <activiti:field name="subject">
          <activiti:string><![CDATA[Travel authorization reminder]]></activiti:string>
        </activiti:field>
        <activiti:field name="text">
          <activiti:string><![CDATA[There is one travel request waiting for your approval.]]></activiti:string>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <boundaryEvent id="boundarytimer2" name="Timer" attachedToRef="subprocess1" cancelActivity="false">
      <timerEventDefinition>
        <timeCycle>R3/PT1M5S</timeCycle>
      </timerEventDefinition>
    </boundaryEvent>
    <sequenceFlow id="flow15" sourceRef="boundarytimer2" targetRef="mailtask2"></sequenceFlow>
    <endEvent id="endevent2" name="End"></endEvent>
    <sequenceFlow id="flow17" sourceRef="mailtask2" targetRef="endevent2"></sequenceFlow>
    <sequenceFlow id="flow18" sourceRef="request" targetRef="saveRequest"></sequenceFlow>
    <sequenceFlow id="flow19" sourceRef="saveRequest" targetRef="loadRequest"></sequenceFlow>
    <serviceTask id="saveRequest" name="Store request in DB" activiti:class="eu.unitn.StoreRequest"></serviceTask>
    <serviceTask id="loadRequest" name="Read request from DB" activiti:class="eu.unitn.RetrieveRequest"></serviceTask>
    <sequenceFlow id="flow20" sourceRef="loadRequest" targetRef="servicetask1"></sequenceFlow>
  </process>
